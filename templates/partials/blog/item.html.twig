<div class="blog-item">
    <h1>
        {{ page.title }}
    </h1>

    <div class="blog-content">
        {{ page.content }}
    </div>

    <p class="prev-next">
        {% if not page.isLast %}
            <a class="button" href="{{ page.prevSibling.url }}">
                <i class="fa fa-chevron-left"></i>
                Previous Post
            </a>
        {% endif %}

        {% if not page.isFirst %}
            <a class="button" href="{{ page.nextSibling.url }}">
                Next Post
                <i class="fa fa-chevron-right"></i>
            </a>
        {% endif %}
    </p>
</div>

