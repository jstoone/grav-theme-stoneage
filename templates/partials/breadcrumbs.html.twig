{% set crumbs = breadcrumbs.get() %}
{% set breadcrumbs_config = config.plugins.breadcrumbs %}
{% set divider = '/' %}
{% set breadcrumb = '/home/jstoone/' %}
{% for crumb in crumbs %}
    {% if not loop.last %}
        {% set breadcrumb = breadcrumb ~ crumb.menu ~ divider %}
        {% set breadcrumb = breadcrumb|lower %}
    {% endif %}
{% endfor %}

{% if crumbs|length > 1 or breadcrumbs_config.show_all %}
<div id="breadcrumbs" itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
    <p>
        <span class="cli-start">$</span> pwd
        <br />
        {{ breadcrumb ~ page.slug }}
    </p>
</div>
{% endif %}
